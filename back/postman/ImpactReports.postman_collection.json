{
  "info": {
    "name": "EcoHouse - Impact Reports API",
    "_postman_id": "ecohouse-impact-reports-collection",
    "description": "Colección para probar todos los endpoints del controller `ImpactReportController`.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Generate Impact Report",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customerId\": 123,\n  \"startDate\": \"2025-11-01T00:00:00\",\n  \"endDate\": \"2025-11-22T23:59:59\",\n  \"reportType\": \"ON_DEMAND\",\n  \"includeProductBreakdown\": true,\n  \"includeCategoryAnalysis\": true,\n  \"includeMonthlyTrend\": true,\n  \"generateDetailedMetrics\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/reports/impact",
          "host": ["{{baseUrl}}"],
          "path": ["api","reports","impact"]
        },
        "description": "Crea un reporte de impacto para un cliente. `startDate` y `endDate` deben ser LocalDateTime en formato ISO (yyyy-MM-ddTHH:mm:ss)."
      },
      "response": []
    },
    {
      "name": "Get Customer Reports",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/customer/123",
          "host": ["{{baseUrl}}"],
          "path": ["api","reports","customer","123"]
        },
        "description": "Obtiene todos los reportes de un cliente (reemplaza 123 por el customerId que usaste)."
      },
      "response": []
    },
    {
      "name": "Get Latest Report",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/customer/123/latest",
          "host": ["{{baseUrl}}"],
          "path": ["api","reports","customer","123","latest"]
        },
        "description": "Obtiene el reporte más reciente para el cliente."
      },
      "response": []
    },
    {
      "name": "Get Report by ID",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/1",
          "host": ["{{baseUrl}}"],
          "path": ["api","reports","1"]
        },
        "description": "Obtiene un reporte por su `reportId` (puede devolver 404 si el endpoint placeholder no está implementado)."
      },
      "response": []
    },
    {
      "name": "Get Customer Stats",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/customer/123/stats",
          "host": ["{{baseUrl}}"],
          "path": ["api","reports","customer","123","stats"]
        },
        "description": "Obtiene estadísticas agregadas del cliente (totalCO2Saved, totalEcoPoints...)."
      },
      "response": []
    },
    {
      "name": "Delete Report (soft)",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/1",
          "host": ["{{baseUrl}}"],
          "path": ["api","reports","1"]
        },
        "description": "Marca un reporte como inactivo (soft delete). Reemplaza `1` por el `reportId` que quieras borrar."
      },
      "response": []
    }
  ]
}

